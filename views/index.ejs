<%- include("bin/header"); %>

<div class="caixa">
	<div class="row">
		<% news.forEach(function(e, i){ %>
			<div class="col s12 m6">

				<div class="card">
					<div class="card-image">
						<a href="/<%= e.url %>">
							<img src="<%= e.img %>" alt="<%= e.alt %>" class="responsive-img">
						</a>
					</div>

					<div class="card-content">
						<a href="/<%= e.url %>">
							<h1 class="title center-align"><%= e.title %></h1>
						</a>

						<h2 class="subtitle center-align"><%= e.subtitle %></h2>

						<p class="info truncate"><%= e.excerpt %></p>
					</div>
				</div>

				<br>
			</div>
		<% }); %>
	</div>

	<div class="row">
		<div class="col s12 prev-next">
			<% if(prev){ %>
				<a href="/<%= ID+1 %>" class="links waves-effect waves-light btn">Postagens Antigas</a>
			<% }; %>
			<% if(next){ %>
				<a href="/<%= ID-1 %>" class="links waves-effect waves-light btn">Postagens Recentes</a>
			<% }; %>
		</div>
	</div>
</div>

<%- include("bin/footer"); %>